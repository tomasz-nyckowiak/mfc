{% block body %}
    <div>
        {{ include('api/_search_form.html.twig') }}
    </div>
    <div>
        <div class="inline-flex flex-row">
            <div>
                <div class="text-4xl">{{ data.originalTitle }}</div>
                <div>
                    {% if data.titleType == "Movie" %}
                        {% if data.runtime != null %}
                            {{ data.releaseDate.year }} | {{ data.runtime }}
                        {% else %}
                            {{ data.releaseDate.year }}
                        {% endif %}
                    {% else %}
                        {{ data.titleType }} | {{ data.releaseDate.year }}-{{ data.releaseDate.endYear }}
                    {% endif %}
                </div>
            </div>
            <div class="ml-6">                
                {% if data.rating != null %}
                <div>IMDb Rating</div>
                <div class="inline-flex flex-row">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="yellow" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                        </svg>
                    </div>
                    <div class="">                    
                        <div>{{ data.rating }}/10</div>
                        <div class="text-xs">{{ data.votes }}</div>
                    </div>
                </div>                
                {% endif %}                
            </div>
            <div class="ml-6">
                <div>Your Rating</div>
                <div class="inline-flex flex-row">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                        </svg>
                    </div>
                    <div class="">                    
                        <div>/10</div>
                    </div>
                </div>
            </div>
            <div class="ml-6">                
                <div class="flex items-center">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if alreadyExist == true %}
                            <button class="border-solid border-2 border-gray-500">                     
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                                </svg>                                                        
                            </button>
                        {% else %}
                        <a href="{{ path('app_add_title', { 'id': titleId }) }}">
                            <button class="border-solid border-2 border-gray-500">                     
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                </svg>                                                        
                            </button>
                        </a>
                        {% endif %}
                    {% endif %}                          
                </div>                                       
            </div>
        </div>        
    </div>    
    <div>
        <div class="inline-flex flex-row">
            <div class="">
                <div class="relative h-80 w-56">
                    {% if data.image != null %}
                    <img class="absolute w-full h-full inset-0 object-cover" src="{{ data.image }}" alt="Cover" >
                    {% else %}
                    <img class="absolute w-full h-full inset-0 object-cover" src="/img/clapper.jpg" alt="No cover">
                    {% endif %}
                </div>
            </div>                
            <div class="flex items-center">
                <div class="ml-6">
                    {% if data.creators != null %}
                        {% if data.creators|length > 1 %}
                        <div>Creators - <span>
                            {% for value in data.creators %}
                                {{ value }}
                            {% endfor %}            
                            </span>
                        </div>
                        {% else %}
                        <div>Creator - <span>
                            {% for value in data.creators %}
                                {{ value }}
                            {% endfor %}
                            </span>
                        </div>
                        {% endif %}
                    {% endif %}
                    {% if data.directors != null %}
                        {% if data.directors|length > 1 %}
                        <div>Directors - <span>
                            {% for value in data.directors %}
                                {{ value }}
                            {% endfor %}            
                            </span>
                        </div>
                        {% else %}
                        <div>Director - <span>
                            {% for value in data.directors %}
                                {{ value }}
                            {% endfor %}            
                            </span>
                        </div>
                        {% endif %}
                    {% endif %}
                    {% if data.writers != null %}
                        {% if data.writers|length > 1 %}
                        <div>Writers - <span>
                            {% for value in data.writers %}
                                {{ value }}
                            {% endfor %}            
                            </span>
                        </div>
                        {% else %}
                        <div>Writer - <span>
                            {% for value in data.writers %}
                                {{ value }}
                            {% endfor %}            
                            </span>
                        </div>
                        {% endif %} 
                    {% endif %}
                </div>                       
            </div>            
        </div>         
    </div>
    <div class="my-3">
        {% for value in data.genres %}
        <span class="border-solid border-2 border-purple-600 rounded-lg p-2">{{ value }}</span>
        {% endfor %} 
    </div>   
    <div>{{ data.plot }}</div>
    <hr class="my-12 h-px border-t-0 bg-transparent bg-gradient-to-r from-transparent via-neutral-500 to-transparent opacity-25 dark:opacity-100"> 
    <div class="text-3xl my-3">Top cast</div>
    <div class="grid grid-cols-2">
        {% for value in data.cast|slice(0, 10) %}        
        <div class="mb-2">
            <div class="inline-flex flex-row">
                <div class="relative h-24 w-24">
                {% if value.image != null %}
                <img class="absolute w-full h-full inset-0 object-cover rounded-full" src="{{ value.image }}">
                {% else %}
                <img class="absolute w-full h-full inset-0 object-cover" src="/img/icon-user.png">
                {% endif %}            
                </div>            
                <div class="flex items-center">
                    <div class="ml-2">
                        <div class="font-bold">{{ value.name }}</div>
                        <div>{{ value.characterName }}</div>
                    </div>                    
                </div>                
            </div>           
        </div>
        {% endfor %}  
    </div>
{% endblock %}