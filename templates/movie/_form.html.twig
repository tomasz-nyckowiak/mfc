{{ form_start(form) }}
    <div>{{ form_errors(form) }}</div>

    <div>
        {{ form_label(form.title, 'Please enter the title') }}
    </div>
    <div>
        {{ form_widget(form.title, {'attr': {'style': 'color: grey'}}) }}
    </div>

    <div>
        {{ form_label(form.summary) }}
    </div>
    <div>
        {{ form_widget(form.summary) }}
    </div>

    <div>
        {{ form_label(form.genres, 'Please choose the genres') }}
    </div>
    <div>
        {{ form_widget(form.genres) }}
    </div>

    <div>
        <button type="submit">Save!</button>
    </div>
{{ form_end(form) }}