                    class="relative font-light text-slate-100 w-1/2 rounded-sm bg-gradient-to-r from-indigo-700 to-indigo-400 shadow-[4px_4px_8px_1px_#708090] hover:cursor-pointer hover:border-slate-400 hover:shadow-[4px_4px_8px_1px_#94a3b8]" 
                    type="file" 
                    id="fileName" 
                    name="fileName"
                    accept=".jpg, .jpeg, .png"
                    onchange="validateFileType()">
                <div class="inline-block text-sm font-semibold ml-2" id="errorMessageForFileType"></div>
            </div>

            <!--TO WATCH INPUT-->
            <div class="relative mb-4">
                <div class="inline-flex">
                    <input 
                        class="relative float-left accent-indigo-500 hover:cursor-pointer hover:shadow-[4px_4px_8px_1px_#94a3b8]" 
                        type="checkbox" 
                        id="checkboxToWatch" 
                        name="toWatchManually">
                    <label 
                        class="inline-block font-light text-slate-200 ml-1 hover:underline hover:cursor-pointer" 
                        for="checkboxToWatch">
                        Add to Watchlist
                    </label>
                </div>
            </div>

            <!--REVIEW INPUT-->
            <div class="relative mb-4">
                <label for="review" class="block font-medium text-[#708090] tracking-wide mb-0.5">My Review</label>
                <textarea 
                    class="text-slate-200 w-1/2 rounded-sm border-2 border-[#708090] bg-gradient-to-r from-indigo-700 to-indigo-400 px-1.5 py-0.5 outline-none shadow-[4px_4px_8px_1px_#708090] focus:border-slate-300 focus:shadow-[4px_4px_8px_1px_#cbd5e1] hover:border-slate-400 hover:shadow-[4px_4px_8px_1px_#94a3b8]"
                    id="review"
                    name="review" 
                    rows="5" 
                    cols="50"></textarea>
            </div>

            <!--RESET AND SUBMIT BUTTONS-->
            <div class="flex justify-end">
                <button
                    type="button"
                    class="font-medium text-xs text-slate-300 uppercase leading-normal bg-slate-900 px-3 py-1 rounded hover:text-slate-50 hover:shadow-[3px_3px_30px_5px_#6366F1]"
                    onclick="resetForm()">
                    Clear
                </button>
                <button 
                    type="submit"
                    class="font-bold text-xs text-slate-300 uppercase leading-normal bg-gradient-to-r from-indigo-600 ml-2 px-3 py-1 rounded border-2 border-indigo-500 hover:text-indigo-700 hover:bg-[#708090] hover:border-indigo-700 hover:shadow-[3px_3px_30px_5px_#708090]"
                    onclick="return validateFormForAddingTitleManually()">
                    Add
                </button>
            </div>         
        </form>
    </div>
