<li class="text-sm md:text-base lg:text-lg ml-1.5 md:ml-0">
    <div class="inline-flex flex-row">
        <div class="relative h-20 w-12 md:h-40 md:w-[100px] lg:h-64 lg:w-40">
            {% if value.image != null %}
                <a href="{{ path('app_details', { 'id': value.id }) }}"><img class="absolute w-full h-full inset-0 object-cover" src="{{ value.image }}" alt="Cover"></a>
            {% else %}
                <a href="{{ path('app_details', { 'id': value.id }) }}"><img class="absolute w-full h-full inset-0 object-cover" src="/img/clapper.jpg" alt="No cover"></a>
            {% endif %}
        </div>
    
        <div class="flex items-center ml-1">
            <div class="flex-col">
                <div class="font-bold">
                    <a href="{{ path('app_details', { 'id': value.id }) }}">{{ value.originalTitle }}</a>
                </div>
                <div>
                    {% if value.titleType == "Movie" %}
                        {% if value.releaseDate != null %}
                            <div>{{ value.releaseDate }}</div>
                        {% endif %}
                    {% else %}
                        {% if value.titleType != "TV Series" %}
                            {{ value.releaseDate }} | {{ value.titleType }}
                        {% else %}
                            {% if value.releaseDate != null %}
                                {% if value.releaseDate.endYear != null %}
                                    {% if value.releaseDate.year != value.releaseDate.endYear %}
                                        {{ value.releaseDate.year }} - {{ value.releaseDate.endYear }} | {{ value.titleType }}
                                    {% else %}
                                        {{ value.releaseDate.year }} | {{ value.titleType }}
                                    {% endif %}                    
                                {% else %}
                                    {{ value.releaseDate.year }} - | {{ value.titleType }}
                                {% endif %}
                            {% else %}
                                {{ value.titleType }}
                            {% endif %}
                        {% endif %}              
                    {% endif %}
                </div>
            </div>                                                                              
        </div>
    </div>
</li>