<!-- Button trigger vertically centered modal-->
<button
    type="button"
    class="inline-block text-xs uppercase leading-normal text-indigo-400 tracking-wide w-40 px-1 py-1 border-2 border-[#778899] rounded transition duration-150 ease-in-out hover:text-white hover:bg-gradient-to-r from-indigo-600"
    data-te-toggle="modal"
    data-te-target="#deleteModal{{ value.id }}">
    Delete
</button>

<!--Vertically centered modal-->
<div
  data-te-modal-init
  class="fixed left-0 top-0 z-[1055] hidden h-full w-full overflow-y-auto overflow-x-hidden outline-none"
  id="deleteModal{{ value.id }}"
  tabindex="-1"
  aria-labelledby="deleteModalTitle"
  aria-modal="true"
  role="dialog">
  <div
    data-te-modal-dialog-ref
    class="pointer-events-none relative flex min-h-[calc(100%-1rem)] w-auto translate-y-[-50px] items-center opacity-0 transition-all duration-300 ease-in-out min-[576px]:mx-auto min-[576px]:mt-7 min-[576px]:min-h-[calc(100%-3.5rem)] min-[576px]:max-w-[500px]">
    <div
      class="pointer-events-auto relative flex w-full flex-col rounded-md border-none bg-[#708090] text-current shadow-lg outline-none">

      <!--Modal body-->
      <div class="relative p-4">
        <div class="text-[#031e49] mb-2">Are you sure you want to remove this title from your library?</div>
        <div class="flex justify-end">
            <button
                type="button"
                class="font-medium text-xs text-slate-300 uppercase leading-normal bg-slate-900 px-3 py-1 rounded hover:text-slate-50"
                data-te-modal-dismiss>
                No
            </button>
            <a href="{{ path('app_library_remove_title', { id: value.id }) }}">
                <button
                    type="button"
                    class="font-bold text-xs text-indigo-700 uppercase leading-normal ml-2 px-3 py-1 rounded border-2 border-[#031e49] hover:text-slate-300 hover:bg-gradient-to-r from-indigo-600">
                    Yes
                </button>
            </a>
        </div>
      </div>

    </div>
  </div>
</div>