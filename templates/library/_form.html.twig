<div>
    <form id="form{{ value.id }}" action="{{ path('app_library_edit_title', { id: value.id }) }}" method="POST" novalidate>
        <!--Rating input-->
        <div class="relative mb-4">
            <label 
                for="rating{{ value.id }}" 
                class="inline-block"
                >My Rating:
            </label>
            {% if value.rating != null %}
            <input 
                type="text" 
                class="dark:text-neutral-600 w-12" 
                id="rating{{ value.id }}" 
                name="rating" 
                minlength="1" 
                maxlength="3"            
                value="{{ value.rating }}">
            {% else %}
            <input 
                type="text" 
                class="dark:text-neutral-600 w-12" 
                id="rating{{ value.id }}" 
                name="rating" 
                minlength="1" 
                maxlength="3">
            {% endif %}
            <p id="demo{{ value.id }}"></p>
        </div>

        <!--To Watch Checkbox-->
        <div class="inline-flex mb-4">
            {% if value.toWatch == 1 %}
            <input 
                class="relative float-left hover:cursor-pointer" 
                type="checkbox" 
                id="checkboxToWatch{{ value.id }}" 
                name="toWatch"
                checked>
            <label 
                class="inline-block hover:cursor-pointer" 
                for="checkboxToWatch{{ value.id }}">
                to Watch
            </label>
            {% else %}
            <input 
                class="relative float-left hover:cursor-pointer" 
                type="checkbox" 
                id="checkboxToWatch{{ value.id }}" 
                name="toWatch">
            <label 
                class="inline-block hover:cursor-pointer" 
                for="checkboxToWatch{{ value.id }}">
                to Watch
            </label>
            {% endif %}
        </div>

        <!--Review-->
        <div class="mb-4">
            <div>My Review:</div>
            {% if value.review != null %}
            <textarea 
                class="dark:text-neutral-600"
                id="reviewFor{{ value.id }}"
                name="review" 
                rows="5" 
                cols="50">{{ value.review }}</textarea>
            {% else %}
            <textarea 
                class="dark:text-neutral-600"
                id="reviewFor{{ value.id }}"
                name="review" 
                rows="5" 
                cols="50"></textarea>
            {% endif %}
        </div>     

        <!--Submit button-->
        <div class="flex justify-end">
            <button
                type="button"
                class="inline-block rounded bg-primary-100 px-6 pb-2 pt-2.5 text-xs font-medium uppercase leading-normal text-primary-700 transition duration-150 ease-in-out hover:bg-primary-accent-100 focus:bg-primary-accent-100 focus:outline-none focus:ring-0 active:bg-primary-accent-200"
                data-te-modal-dismiss
                data-te-ripple-init
                data-te-ripple-color="light">
                Close
            </button>
            <button 
                type="submit"
                class="block dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded border"
                onclick="return validateForm()">
                Save!
            </button>
        </div>       
    </form>
</div>