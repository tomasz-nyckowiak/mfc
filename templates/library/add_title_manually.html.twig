                <div class="inline-block text-sm font-semibold ml-2" id="errorMessageForIMDbRating"></div>
            </div>

            <!--PLOT INPUT-->
            <div class="relative mb-4">
                <label for="plot" class="block font-medium text-[#708090] tracking-wide mb-0.5">Plot</label>
                <textarea
                    class="block text-slate-200 w-1/2 rounded-sm border-2 border-[#708090] bg-gradient-to-r from-indigo-700 to-indigo-400 px-1.5 py-0.5 outline-none shadow-[4px_4px_8px_1px_#708090] focus:border-slate-300 focus:shadow-[4px_4px_8px_1px_#cbd5e1] hover:border-slate-400 hover:shadow-[4px_4px_8px_1px_#94a3b8]"
                    id="plot"
                    name="plot"
                    rows="5"
                    cols="50"
                    maxlength="1000"
