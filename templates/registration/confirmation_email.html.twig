{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center text-slate-400 w-1/2 mx-auto mb-10 p-2 rounded border-2 border-indigo-500/75">
        <p>Please confirm your email address by clicking the following link: <br>
            <a href="{{ signedUrl|raw }}" class="hover:text-indigo-500 hover:underline decoration-1">Confirm my Email</a>.   
        </p>
        <p>This link will expire in {{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.</p>
        <p>Cheers!</p>
    </div>
{% endblock %}